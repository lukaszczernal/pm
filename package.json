{
  "name": "poultry-manager",
  "version": "0.0.1",
  "description": "Poultry Manager",
  "author": "KZGPR and Lukasz Czernal",
  "url": "http://kzgpr.pl",
  "copyright": "Copyright 2017 Łukasz Czernal",
  "license": "MIT",
  "angular-cli": {},
  "main": "./dist/index.js",
  "productName": "Poultry Manager",
  "build": {
    "appId": "com.kzgrp.${name}",
    "copyright": "Copyright © year ${author}",
    "directories": {
      "output": "package"
    }
  },
  "scripts": {
    "copy": "cp ./src/electron-scripts/* ./dist/",
    "ng": "ng",
    "start": "ng serve",
    "electron": "electron .",
    "build": "ng build",
    "pack": "npm run build && npm run copy && build --dir",
    "pack:win": "npm run build && npm run copy && electron-builder --dir --win",
    "dist": "electron-builder --publish always",
    "dist:win": "npm run build && npm run copy && electron-builder --win",
    "test": "ng test",
    "lint": "ng lint",
    "e2e": "ng e2e",
    "postbuild": "npm run copy",
    "postinstall": "electron-builder install-app-deps"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "5.2.3",
    "@angular/cdk": "5.1.1",
    "@angular/common": "5.2.3",
    "@angular/compiler": "5.2.3",
    "@angular/core": "5.2.3",
    "@angular/forms": "5.2.3",
    "@angular/http": "5.2.3",
    "@angular/material": "5.1.1",
    "@angular/platform-browser": "5.2.3",
    "@angular/platform-browser-dynamic": "5.2.3",
    "@angular/router": "5.2.3",
    "@swimlane/ngx-charts": "7.0.1",
    "chart.js": "^2.7.1",
    "core-js": "^2.5.3",
    "d3": "^4.12.2",
    "lodash": "^4.17.4",
    "lovefield": "^2.1.12",
    "moment": "2.17.1",
    "ng2-bootstrap": "1.4.0",
    "normalize.css": "^7.0.0",
    "rxjs": "5.5.2",
    "zone.js": "^0.8.20"
  },
  "devDependencies": {
    "@angular/cli": "1.6.6",
    "@angular/compiler-cli": "5.2.3",
    "@types/jasmine": "2.5.45",
    "@types/lodash": "^4.14.50",
    "@types/lovefield": "2.0.32",
    "@types/node": "7.0.8",
    "axios": "^0.18.0",
    "codelyzer": "4.0.1 ",
    "electron": "1.8.3",
    "electron-builder": "^20.8.1",
    "jasmine-core": "2.5.2",
    "jasmine-spec-reporter": "3.2.0",
    "karma": "1.5.0",
    "karma-chrome-launcher": "2.0.0",
    "karma-cli": "1.0.1",
    "karma-coverage-istanbul-reporter": "0.3.0",
    "karma-jasmine": "1.1.0",
    "karma-jasmine-html-reporter": "0.2.2",
    "protractor": "5.1.1",
    "tslint": "^5.8.0",
    "typescript": "^2.6.2"
  }
}
